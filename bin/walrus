#!/usr/bin/env ruby

#
# = Synopsis
# 
# walrus: command-line front-end for the Walrus templating system
# 
# = Usage
#
#   --debug, -d: print debug information to the standard error during processing
#   --help, -h: show help
#   
#   --version, -v: show version information
# 
# 

require 'getoptlong'

# http://rubyforge.org/tracker/?func=detail&atid=1698&aid=5563&group_id=426
require 'rdoc/ri/ri_paths'
require 'rdoc/usage'

opts = Getoptlong.new(
  ['--compile',         '-c', Getoptlong::NO_ARGUMENT ],
  ['--fill',            '-f', Getoptlong::NO_ARGUMENT ],
  ['--input-file',      '-i', Getoptlong::REQUIRED_ARGUMENT ],
  ['--output-file',     '-o', Getoptlong::REQUIRED_ARGUMENT ],
  ['--output-extension',      Getoptlong::REQUIRED_ARGUMENT ],
  ['--debug',           '-d', Getoptlong::NO_ARGUMENT ],
  ['--help',            '-h', Getoptlong::NO_ARGUMENT ],
  ['--version',         '-v', Getoptlong::NO_ARGUMENT ]
)


RDoc::usage
